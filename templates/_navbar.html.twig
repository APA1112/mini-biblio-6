{% set current_path = app.request.get('_route')|split('_') %}
<nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('principal') }}"><i class="fa fa-book-open"></i> MiniBiblio</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link {{ current_path[0] == 'principal' ? 'active" aria-current="page' }}"
                       href="{{ path('principal') }}">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ current_path[0] == 'libro' ? 'active" aria-current="page' }}"
                       href="{{ path('libro_listar') }}"><i class="fa fa-book"></i> Libros</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ current_path[0] == 'socio' ? 'active" aria-current="page' }}"
                       href="{{ path('socio_listar') }}"><i class="fa fa-person"></i> Socios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Sección 3</a>
                </li>
            </ul>
            <ul class="navbar-nav mr-auto">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link {{ current_path[0] == 'principal' ? 'active" aria-current="page' }}"
                           href="{{ path('principal') }}">Conectado como {{ app.user.email }}</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_logout') }}" class="btn btn-primary">Cerrar sesión</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a href="{{ path('app_login') }}" class="btn btn-primary">Iniciar sesión</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
